<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context=".About">

    <ImageView
        android:id="@+id/F_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="FOOPER (Food Helper) is a voluntary, social service organization that aims to bring together other such NGOs to deliver food to the less fortunate ones." />

    <TextView
        android:id="@+id/dev_info"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold"
        android:text="DEVELOPERS INFORMATION"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="-> Gagan KumarSoni"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="->Akshita Gupta"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="->Garima Pandey"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/akg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="->Akanksha Goel"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/as"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="->Ashish Sharma"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:src="@drawable/technologo"/>


</LinearLayout>