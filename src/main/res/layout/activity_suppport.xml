<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    tools:context=".Suppport">

    <TextView
        android:id="@+id/sup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginRight="10sp"
        android:gravity="center_horizontal"
        android:text="HELP AND SUPPORT"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginRight="10sp"
        app:srcCompat="@drawable/help_icon" />

    <TextView
        android:id="@+id/x24"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10sp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="Contact 24x7 Help"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10sp"
        android:text="We are there for you to solve your problems."
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCall"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:srcCompat="@drawable/call" />

        <TextView
            android:id="@+id/call_text"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="100dp"
            android:gravity="left"
            android:text="...We're here for your help."
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMail"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:srcCompat="@drawable/mail" />

        <TextView
            android:id="@+id/mail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="...Can contact us through e-mail."
            android:textSize="20sp" />

    </LinearLayout>


    <EditText
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Please enter your feedback here."
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        app:srcCompat="@drawable/feedback" />

    <TextView
        android:id="@+id/bot"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="We care for your feedback.We would like to have your feedback to improve our app." />


</LinearLayout>